{
  "name": "dhi",
  "version": "0.1.1",
  "description": "High-performance TypeScript validation library with WebAssembly backend",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "typescript",
    "validation",
    "schema",
    "types",
    "wasm",
    "webassembly",
    "performance"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/justrach/dhi.git"
  },
  "author": "Rach Pradhan",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bash scripts/build.sh",
    "build:ts": "tsc",
    "prepublishOnly": "npm run build",
    "test": "npm run test:wasm && npm run test:jest",
    "test:wasm": "cd rust && wasm-pack test --node",
    "test:jest": "jest",
    "benchmark": "bun run benchmarks/benchmark.ts",
    "example": "bun run examples/example.ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^18.15.11",
    "jest": "^29.5.0",
    "typescript": "^5.0.4",
    "wasm-pack": "^0.12.1"
  }
}
