{
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "types.d.ts",
    "schema.ts",
    "schema-nextjs.ts",
    "schema-turbo.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "benchmark*.ts",
    "test*.ts",
    "examples"
  ]
}
